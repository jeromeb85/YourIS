{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "allowJs": true, // These settings apply to .js files as well as .ts files
    "noEmit": true // Do not compile the JS (or TS) files in this project on build
  },
  "exclude": [
    "node_modules",
    "bower_components",
    "wwwroot"
  ]
}
